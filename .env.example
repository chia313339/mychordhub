# MyChordHub 環境變數配置範例
# 複製此檔案為 .env 並填入實際值

# 應用環境
ENVIRONMENT=development

# 資料庫配置
DATABASE_URL=postgresql://postgres:password@localhost:5432/mychordhub
POSTGRES_DB=mychordhub
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Redis配置
REDIS_URL=redis://localhost:6379/0

# JWT設定
JWT_SECRET_KEY=your-very-secure-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# CORS設定
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# 前端配置
VITE_API_BASE_URL=http://localhost:8000
VITE_APP_NAME=MyChordHub
VITE_APP_VERSION=1.0.0

# 音樂功能配置
ENABLE_AUDIO_SYNTHESIS=true
DEFAULT_AUDIO_FORMAT=mp3
CHORD_LIBRARY_PATH=/app/data/chords

# 檔案上傳配置
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,audio/mpeg

# 監控與日誌
LOG_LEVEL=INFO
ENABLE_METRICS=true
SENTRY_DSN=your-sentry-dsn-here

# 開發工具 (僅開發環境)
PGADMIN_DEFAULT_EMAIL=admin@mychordhub.com
PGADMIN_DEFAULT_PASSWORD=admin

# SSL憑證 (生產環境)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# 效能調校
POSTGRES_MAX_CONNECTIONS=100
REDIS_MAX_MEMORY=256mb
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=120

# 外部服務 (可選)
GOOGLE_ANALYTICS_ID=
SENTRY_DSN=
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=